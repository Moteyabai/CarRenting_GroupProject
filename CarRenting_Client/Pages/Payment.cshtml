@page
@model CarRenting_Client.Pages.PaymentModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Job Dashboard | By Code Info</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/popup.css" />
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>

<body>
    <div class="container">
        <nav>
            <div class="navbar">
                <div class="logo">
                    <img src="/pic/logo.jpg" alt="">
                    <h1>HCAR</h1>
                </div>
                <ul>
                    <li>
                        <a href="Car">
                            <i class="fas fa-car"></i>
                            <span class="nav-item">Car</span>
                        </a>
                    </li>
                    <li>
                        <a href="CarBrand">
                            <i class="fas fa-chart-bar"></i>
                            <span class="nav-item">Car Brand</span>
                        </a>
                    </li>
                    <li>
                        <a href="StaffBooking">
                            <i class="fas fa-chart-bar"></i>
                            <span class="nav-item">Booking</span>
                        </a>
                    </li>
                    <li>
                        <a href="Payment">
                            <i class="fas fa-tasks"></i>
                            <span class="nav-item">Transaction</span>
                        </a>
                    </li>
                    <li>
                        <a href="Login" class="logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span class="nav-item">Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <section class="main">
            <div class="main-top">
                <p>Dam Anh Bang SE150648 University</p>
            </div>
            <div class="main-body">
                <h1>Payments</h1>
                @foreach (var car in Model.Transactions)
                {
                    <div class="job_card">
                        <div class="job_details">
                            <div class="text">
                                <div>
                                    <span style="font-weight: bold;">Transaction code: </span>
                                    <span>@car.TransactionID</span>
                                </div>
                                <div>
                                    <span style="font-weight: bold;">Date: </span>
                                    <span>@car.PaymentDate</span>
                                </div>
                                <div>
                                    <span style="font-weight: bold;">Price: </span>
                                    <span>@car.Price</span>
                                </div>
                                <div>
                                    <span style="font-weight: bold;">Status: </span>
                                    @if (car.Status == 1)
                                    {
                                        <span style="color: green;">Successful</span>
                                    }

                                </div>
                            </div>
                        </div>


                    </div>
                }

            </div>
        </section>
    </div>

</body>

</html>
