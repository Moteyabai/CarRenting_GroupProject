@page
@model CarRenting_Client.Pages.Users.CarModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Car</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/popup.css" />
    <style>
        .notification {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #f1f1f1;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            opacity: 0;
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

            .notification.show {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }



    </style>
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

</head>

<body>
    <div class="container">
        <nav>
            <div class="navbar">
                <div class="logo">
                    <img src="/pic/logo.jpg" alt="">
                    <h1>HCAR</h1>
                </div>
                @if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("1"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="Booking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Transaction">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a href="Profile">
                                <i class="fab fa-dochub"></i>
                                <span class="nav-item">Profile</span>
                            </a>
                        </li>
                        <li>
                            <form method="post" asp-page-handler="Logout">
                                <button type="submit" class="logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span class="nav-item">Logout</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                }
                else if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("2"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="CarBrand">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Car Brand</span>
                            </a>
                        </li>
                        <li>
                            <a href="StaffBooking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Payment">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <form method="post" asp-page-handler="Logout">
                                <button type="submit" class="logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span class="nav-item">Logout</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                }
                else if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("3"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="StaffBooking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Payment">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <form method="post" asp-page-handler="Logout">
                                <button type="submit" class="logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span class="nav-item">Logout</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                }

            </div>
        </nav>

        <section class="main">
            <div class="main-top">
                <p>Car Renting</p>
            </div>
            <div class="main-body">
                <h1>Cars</h1>

                <form method="get">
                    <div class="search_bar">
                        <input asp-for="Name" placeholder="Search car name...">
                        <input type="submit" value="Search" />
                    </div>
                </form>


                @if(Model.Cars == null)
                {
                    <p>No Cars found!</p>
                }else{
                    @foreach (var car in Model.Cars)
                    {
                        <div class="job_card">
                            <div class="job_details">
                                @if (car.ImageCar != null)
                                {
                                    <div class="img">
                                        <img src="@car.ImageCar" style="width:75px;height:95px"></img>
                                    </div>
                                }else{
                                    <div class="img">
                                        <img src="https://static.vecteezy.com/system/resources/thumbnails/025/019/602/small/camping-hiking-nature-mountain-river-graphic-illustration-vector-art-t-shirt-design-generative-ai-png.png" style="width:75px;height:95px"></img>
                                    </div>
                                }
                                
                                <div class="text">
                                    <div>
                                        <span style="font-weight: bold;">Name: </span>
                                        <span>@car.CarName</span>
                                    </div>
                                    <div>
                                        <span style="font-weight: bold;">Car Plate: </span>
                                        <span>@car.CarPlate</span>
                                    </div>
                                    <div>
                                        <span style="font-weight: bold;">Deposit: </span>
                                        <span>@car.Deposit</span>
                                    </div>
                                </div>
                            </div>
                            <div class="job_salary">
                                @if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("1"))
                                {
                                    <div class="job_salary" onclick="openFormUpdate('@car.CarID')">
                                        Booking
                                    </div>
                                }
                                <a asp-page="ViewCar" asp-route-CarID="@car.CarID">View</a>
                                @if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("2")) {
                                    <form method="post" asp-page-handler="Delete" asp-route-carID="@car.CarID">
                                        <button type="submit" class="btn-delete">Delete</button>
                                    </form>
                                }
                            </div>
                           

                            


                        </div>
                        <div class="form-popup" id="myFormUpdate_@car.CarID">
                            <!-- Your existing form content -->
                            <form method="post" asp-page-handler="OnPost" class="form-container" id="formUpdate_@car.CarID">
                                <input type="hidden" asp-for="CarID" value="@car.CarID" required>
                                <label for="StartDate"><b>Start Date</b></label>
                                <input type="date" asp-for="StartDate" required><br />

                                <label for="EndDate"><b>End Date</b></label>
                                <input type="date" asp-for="EndDate" required>

                                <button type="submit" class="btn">Hire</button>
                                <button type="button" class="btn cancel" onclick="closeFormUpdate('@car.CarID')">Close</button>
                            </form>
                        </div>
                    }
                }

            </div>

            @if (TempData["Message"] != null)
            {
                <div class="notification">
                    <p>@TempData["Message"]</p>
                </div>
            }

        </section>

        


    </div>

    <script>
        function openFormUpdate(roomId) {
            document.getElementById("myFormUpdate_" + roomId).style.display = "block";
        }

        function closeFormUpdate(roomId) {
            document.getElementById("myFormUpdate_" + roomId).style.display = "none";
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const notification = document.querySelector('.notification');

            setTimeout(function () {
                notification.classList.add('show');
                setTimeout(function () {
                    notification.classList.remove('show');
                }, 3000);
            }, 1000); // Show notification after 1 second
        });


    </script>
 


    @if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("2"))
    {
        <button class="open-button" onclick="openForm()">Create Car</button>
    }

    <div class="form-popup" id="myForm">
        <form method="post" asp-page-handler="CreateRoomInformation" class="form-container" enctype="multipart/form-data">
            <h1>Car</h1>

            <label for="file">Select Image:</label>
            <input type="file" id="file" name="file" accept=".jpg, .jpeg, .png" /><br />

            <label for="RoomNumber"><b>Full Name</b></label>
            <input type="text" asp-for="RoomInformationDto.CarName" required><br />
            <span asp-validation-for="RoomInformationDto.CarName" class="text-danger"></span>

            <label for="RoomDetailDescription"><b>Car Plate </b></label>
            <input type="text" asp-for="RoomInformationDto.CarPlate" required><br />
            <span asp-validation-for="RoomInformationDto.CarPlate" class="text-danger"></span>

            <label for="RoomMaxCapacity"><b>Deposit</b></label>
            <input type="number" asp-for="RoomInformationDto.Deposit" required> <br />
            <span asp-validation-for="RoomInformationDto.Deposit" class="text-danger"></span>

            <label for="RoomPricePerDay"><b>Price Per Day</b></label>
            <input type="number" asp-for="RoomInformationDto.PricePerDay" required><br />
            <span asp-validation-for="RoomInformationDto.PricePerDay" class="text-danger"></span>

            <label for="RoomPricePerDay"><b>Seat</b></label>
            <select asp-for="RoomInformationDto.Seat" asp-items="@(ViewData["SeatNumbers"] as IEnumerable<SelectListItem>)" required>
                <option value="">Select Seat</option>
            </select><br />
            <span asp-validation-for="RoomInformationDto.Seat" class="text-danger"></span>


            <label for="CarBrand"><b>Brand</b></label>
            <select asp-for="RoomInformationDto.CarBrandID" asp-items="@(ViewData["BrandCar"] as SelectList)" required>
                <option value="">Select Type</option>
            </select><br />

            <label for="RoomPricePerDay"><b>Description</b></label><br />
            <textarea asp-for="RoomInformationDto.Description" required></textarea><br />
            <span asp-validation-for="RoomInformationDto.Description" class="text-danger"></span>

            <button type="submit" class="btn">Add</button>
            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
    </div>

    <script>
        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }

        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }
    </script>
    

</body>

</html>