@page
@model CarRenting_Client.Pages.ViewCarModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Profile</title>
    <title>ViewCar</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/popup.css" />
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>

    <div class="container">
        <nav>
            <div class="navbar">
                <div class="logo">
                    <img src="/pic/logo.jpg" alt="">
                    <h1>HCAR</h1>
                </div>
                @if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("1"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="Booking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Transaction">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a href="Profile">
                                <i class="fab fa-dochub"></i>
                                <span class="nav-item">Profile</span>
                            </a>
                        </li>
                        <li>
                            <a href="Login" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                }
                else if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("2"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="StaffBooking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Payment">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a href="Login" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                }
                else if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("3"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="StaffBooking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Payment">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a href="Login" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                }

            </div>
        </nav>

        <section class="main">
            <div class="main-top">
                <p>Car Renting</p>
            </div>
            <div class="main-body">



                <h1>Car Detail</h1>

                <form method="post" enctype="multipart/form-data">
                    <div style="display: flex;">
                        @if (Model.Cars.ImageCar == null)
                        {
                            <div style="width: 49%; padding-right: 1%; text-align: right;">
                                <img src="https://static.vecteezy.com/system/resources/thumbnails/025/019/602/small/camping-hiking-nature-mountain-river-graphic-illustration-vector-art-t-shirt-design-generative-ai-png.png" style="width: 100%; text-align: center;">
                            </div>
                        }
                        else
                        {
                            <div style="width: 49%; padding-right: 1%; text-align: right;">
                                <img src="@Model.Cars.ImageCar" style="width: 100%; text-align: center;">
                            </div>
                            
                        }
                        
                        <div style="width: 49%; padding-left: 1%;">
                            <input type="hidden" asp-for="Cars.CarID">
                            <label for="fname">CarName:</label><br>
                            <input disabled asp-for="Cars.CarName" style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; transition: border-color 0.3s;"><br>
                            <label for="lname">CarPlate:</label><br>
                            <input disabled asp-for="Cars.CarPlate" style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; transition: border-color 0.3s;"><br>
                            <label for="lname">Deposit:</label><br>
                            <input disabled asp-for="Cars.Deposit" style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; transition: border-color 0.3s;"><br>
                            <label for="fname">Price Per Day:</label><br>
                            <input disabled asp-for="Cars.PricePerDay" style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; transition: border-color 0.3s;"><br>
                            <label for="fname">Seatn:</label><br>
                            <input disabled asp-for="Cars.Seat" style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; transition: border-color 0.3s;"><br>
                            <label for="fname">Brand name:</label><br>
                            <input disabled asp-for="Cars.CarBrand" style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; transition: border-color 0.3s;"><br>
                            <label for="fname">Description:</label><br>
                            <textarea disabled asp-for="Cars.Description" style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; transition: border-color 0.3s;height:30%;"></textarea><br>
                        </div>

                    </div>
                </form>


            </div>
        </section>
    </div>

    @if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("2"))
    {
        <button class="open-button" onclick="openForm()">Update</button>
    }
  

    <div class="form-popup" id="myForm">
        <form method="post" class="form-container" enctype="multipart/form-data">

            <label for="file">Select Image:</label>
            <input type="file" id="file" name="file" accept=".jpg, .jpeg, .png" /><br />

            <label for="RoomNumber"><b>Full Name</b></label>
            <input type="text" asp-for="Cars.CarName" required><br />
            <span asp-validation-for="Cars.CarName" class="text-danger"></span>

            <label for="RoomDetailDescription"><b>Car Plate </b></label>
            <input type="text" asp-for="Cars.CarPlate" required><br />
            <span asp-validation-for="Cars.CarPlate" class="text-danger"></span>

            <label for="RoomMaxCapacity"><b>Deposit</b></label>
            <input type="number" asp-for="Cars.Deposit" required> <br />
            <span asp-validation-for="Cars.Deposit" class="text-danger"></span>

            <label for="RoomPricePerDay"><b>Price Per Day</b></label>
            <input type="number" asp-for="Cars.PricePerDay" required><br />
            <span asp-validation-for="Cars.PricePerDay" class="text-danger"></span>

            <label for="RoomPricePerDay"><b>Seat</b></label>
            <input type="number" asp-for="Cars.Seat" required><br />
            <span asp-validation-for="Cars.Seat" class="text-danger"></span>

            <label for="CarBrand"><b>Brand</b></label>
            <select asp-for="Cars.CarBrandID" asp-items="@(ViewData["BrandCar"] as SelectList)" required>
                <option value="">Select Type</option>
            </select><br />

            <label for="RoomPricePerDay"><b>Description</b></label><br />
            <textarea asp-for="Cars.Description" required></textarea><br />
            <span asp-validation-for="Cars.Description" class="text-danger"></span>

            <input type="hidden" asp-for="Cars.Status" value="1" required>

            <input type="hidden" asp-for="Cars.CarID" required>

            <button type="submit" class="btn">Update</button>
            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
    </div>

    <script>
        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }

        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }
    </script>

</body>
</html>
