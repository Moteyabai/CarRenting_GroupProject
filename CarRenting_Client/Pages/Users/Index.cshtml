@page
@model CarRenting_Client.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="post">
    <input asp-for="Search" type="text" />
    <button type="submit">Search</button>
</form>
@if (Model.User == null)
{
    <p> No Users found!
    </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].UserName)
                </th>
@*                 <th>
                    @Html.DisplayNameFor(model => model.User[0].Password)
                </th> *@
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Identification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].License)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].RoleID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
@*                     <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td> *@
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.License)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleID)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.UserID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.UserID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.UserID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
