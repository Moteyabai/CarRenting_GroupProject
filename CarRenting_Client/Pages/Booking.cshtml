@page
@model CarRenting_Client.Pages.BookingModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Job Dashboard | By Code Info</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/popupFull.css" />
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>

<body>
    <div class="container">
        <nav>
            <div class="navbar">
                <div class="logo">
                    <img src="/pic/logo.jpg" alt="">
                    <h1>Hotel</h1>
                </div>
                <ul>
                    <li>
                        <a href="Car">
                            <i class="fas fa-user"></i>
                            <span class="nav-item">Car</span>
                        </a>
                    </li>
                    <li>
                        <a href="Booking">
                            <i class="fas fa-chart-bar"></i>
                            <span class="nav-item">Booking</span>
                        </a>
                    </li>
                    <li>
                        <a href="pushimage">
                            <i class="fas fa-tasks"></i>
                            <span class="nav-item">pushimage</span>
                        </a>
                    </li>

                    <li>
                        <a href="ReportStatistic">
                            <i class="fab fa-dochub"></i>
                            <span class="nav-item">Statistic</span>
                        </a>
                    </li>
                    <li>
                        <a href="Login" class="logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span class="nav-item">Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <section class="main">
            <div class="main-top">
                <p>Dam Anh Bang SE150648 University</p>
            </div>
            <div class="main-body">
                <h1>Booking</h1>
                <div class="row">
                </div>
                @foreach (var booking in Model.Bookings)
                {
                    <div class="job_card">
                        <div class="job_details">
                            <div class="text">
                                <div>
                                    <span style="font-weight: bold;">Booking Date: </span>
                                    <span>@booking.BookingDate</span>
                                </div>
                                <div>
                                    <span style="font-weight: bold;">Total Price: </span>
                                    <span>@booking.TotalPrice</span>
                                </div>
                                <div>
                                    <span style="font-weight: bold;">Status: </span>
                                    <span>@booking.Status</span>
                                </div>
                               
                            </div>
                        </div>
                        <div class="job_salary">
                            <a asp-page="BookingDetail" asp-route-bookingID="@booking.BookingID">View</a>
                        </div>


                    </div>
                }
            </div>
        </section>
    </div>

</body>

</html>
