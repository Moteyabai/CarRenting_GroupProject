@page
@model CarRenting_Client.Pages.BookingDetailModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Job Dashboard | By Code Info</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/popup.css" />
    <!-- Font Awesome Cdn Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>

<body>
    <div class="container">
        <nav>
            <div class="navbar">
                <div class="logo">
                    <img src="/pic/logo.jpg" alt="">
                    <h1>HCAR</h1>
                </div>
                @if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("1"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="Booking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Transaction">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a href="Profile">
                                <i class="fab fa-dochub"></i>
                                <span class="nav-item">Profile</span>
                            </a>
                        </li>
                        <li>
                            <a href="Login" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                }
                else if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("2"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="StaffBooking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Payment">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a href="Login" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                }
                else if (HttpContext.Session.GetString("RoleID") != null && HttpContext.Session.GetString("RoleID").Equals("3"))
                {
                    <ul>
                        <li>
                            <a href="Car">
                                <i class="fas fa-car"></i>
                                <span class="nav-item">Car</span>
                            </a>
                        </li>
                        <li>
                            <a href="StaffBooking">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-item">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="Payment">
                                <i class="fas fa-tasks"></i>
                                <span class="nav-item">Transaction</span>
                            </a>
                        </li>
                        <li>
                            <a href="Login" class="logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Logout</span>
                            </a>
                        </li>
                    </ul>
                }

            </div>
        </nav>

        <section class="main">
            <div class="main-top">
                <p>Dam Anh Bang SE150648 University</p>
            </div>
            <div class="main-body">
                <h1>Booking</h1>
                <div style="margin-bottom: 10px; margin-left:15px;">
                    <label style="font-weight: bold;" for="fname">Booking Date:</label>
                    <span>@Model.Booking.BookingDate</span>
                    <br>
                    <label style="font-weight: bold;" for="fname">Total Price:</label>
                    <span>@Model.Booking.TotalPrice</span>
                    <br>
                </div>
                <h3>Booking Detail</h3>
                <div class="job_card">
                    <div class="job_details">
                        <div class="text">
                            <label style="font-weight: bold;" for="fname">Start Date:</label>
                            <span>@Model.Booking.BookingDetails[0].StartDate</span>
                            <br>
                            <label style="font-weight: bold;" for="fname">End Date:</label>
                            <span>@Model.Booking.BookingDetails[0].EndDate</span>
                            <br>
                            <label style="font-weight: bold;" for="fname">Car Price:</label>
                            <span>@Model.Booking.BookingDetails[0].CarPrice</span>
                            <br>
                            <label style="font-weight: bold;" for="fname">Fined:</label>
                            <span>@Model.Booking.BookingDetails[0].Fined</span>
                            <br>
                        </div>
                    </div>

                </div>
                <a asp-page="Contract" asp-route-contractID="@Model.Booking.BookingDetails[0].ContractID">Contract</a>
                <a asp-page="CarDamage" asp-route-damageID="@Model.Booking.BookingDetails[0].DetailsID">Car Damage</a>

            </div>
        </section>
    </div>



</body>

</html>
